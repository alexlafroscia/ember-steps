<DocsDemo as |demo|>
  <demo.example @name="demo-basic-wizard.hbs">
    <StepManager as |w|>
      <w.step>
        This content is on the first step. You can only go forward.
      </w.step>

      <w.step>
        This content is on the second step. You can go forward or backward.
      </w.step>

      <w.step>
        This content is on the third step. You can only go backward.
      </w.step>

      {{#control-group}}
        <button {{action w.transition-to-previous}} disabled={{not w.hasPreviousStep}}>
          Previous
        </button>
        <button {{action w.transition-to-next}} disabled={{not w.hasNextStep}}>
          Next
        </button>
      {{/control-group}}
    </StepManager>
  </demo.example>

  <demo.snippet @name="demo-basic-wizard.hbs" />
</DocsDemo>
