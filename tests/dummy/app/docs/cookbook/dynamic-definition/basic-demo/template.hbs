<DocsDemo as |demo|>
  <demo.example @name="dynamic-definition-basic-example.hbs">
    <StepManager as |w|>
      {{#each data as |content|}}
        <w.step>
          {{content}}
        </w.step>
      {{/each}}

      {{#control-group}}
        <button type="button" {{action w.transition-to-previous}}>
          Previous
        </button>
        <button type="button" {{action w.transition-to-next}}>
          Next
        </button>
      {{/control-group}}
    </StepManager>
  </demo.example>

  <demo.snippet @name="dynamic-definition-basic-example.js" @label="component.js" />
  <demo.snippet @name="dynamic-definition-basic-example.hbs" />
</DocsDemo>
