<DocsDemo as |demo|>
  <demo.example @name="cookbook-tabs-with-query-params.hbs">
    {{#tab-group}}
      {{#link-to "docs.cookbook.tabs.query-param" (query-params tab="first")}}
        Link to First Tab
      {{/link-to}}
      {{#link-to "docs.cookbook.tabs.query-param" (query-params tab="second")}}
        Link to Second Tab
      {{/link-to}}
    {{/tab-group}}

    <StepManager @currentStep={{tab}} as |w|>
      <w.step @name="first">
        This content is on the first tab
      </w.step>

      <w.step @name="second">
        This content is on the second tab
      </w.step>
    </StepManager>
  </demo.example>

  <demo.snippet @name="cookbook-tabs-with-query-params.hbs" />
  <demo.snippet
    @name="cookbook-tabs-with-query-params-controller.js"
    @label="controller.js"
  />
</DocsDemo>
