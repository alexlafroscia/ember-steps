{{#docs-demo as |demo|}}
  {{#demo.example name="demo-cyclical-steps-cyclical.hbs"}}
    <StepManager @linear={{false}} as |w|>
      <w.step>
        First step has both a "next" and "previous" step
      </w.step>

      <w.step>
        Second step has both a "next" and "previous" step
      </w.step>

      {{#control-group}}
        <button
          onClick={{action w.transition-to-previous}}
          disabled={{not w.hasPreviousStep}}
        >
          Previous
        </button>
        <button
          onClick={{action w.transition-to-next}}
          disabled={{not w.hasNextStep}}
        >
          Next
        </button>
      {{/control-group}}
    </StepManager>
  {{/demo.example}}

  {{demo.snippet "demo-cyclical-steps-cyclical.hbs"}}
