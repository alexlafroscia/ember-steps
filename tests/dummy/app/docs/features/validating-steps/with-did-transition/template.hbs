{{#docs-demo as |demo|}}
  {{#demo.example name="validating-steps-did-transition.hbs"}}
    <StepManager as |w|>
      <w.step>
        <input placeholder="Enter password" value={{password}}>

        {{#control-group}}
          <button
            onclick={{validate-transition w.transition-to-next with=(action "checkPassword")}}
          >
            Check Password
          </button>
        {{/control-group}}
      </w.step>

      <w.step>
        Great job! You got the password right

        {{#control-group}}
          <button {{action (pipe w.transition-to-previous (action "reset"))}}>
            Reset
          </button>
        {{/control-group}}
      </w.step>
    </StepManager>
  {{/demo.example}}

